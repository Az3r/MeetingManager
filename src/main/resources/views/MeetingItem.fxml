<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<fx:root type="Pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azer.meetingmanager.ui.components.MeetingItemController">
   <children>
      <ImageView fx:id="photoImageView" fitHeight="160.0" fitWidth="360.0" layoutX="84.0" layoutY="32.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/background.jpg" />
         </image>
         <effect>
            <ColorAdjust />
         </effect>
      </ImageView>
      <VBox alignment="CENTER" layoutX="36.0" layoutY="212.0" spacing="10.0">
         <children>
            <Label styleClass="meeting-item-title" text="meeting title" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" styleClass="meeting-item-detail">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/time.png" />
                     </image>
                     <effect>
                        <ColorAdjust brightness="0.6" />
                     </effect>
                  </ImageView>
                  <Label fx:id="timeLabel" text="when meeting is taken placed" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" styleClass="meeting-item-detail">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/location.png" />
                     </image>
                     <effect>
                        <ColorAdjust brightness="0.6" />
                     </effect>
                  </ImageView>
                  <Label fx:id="locationLabel" text="location where meeting is hold" wrapText="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" styleClass="meeting-item-detail">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/capacity.png" />
                     </image>
                     <effect>
                        <ColorAdjust brightness="0.6" />
                     </effect>
                  </ImageView>
                  <Label fx:id="capacityLabel" text="how many people can participate in meeting" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" styleClass="meeting-item-detail">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/pending.png" />
                     </image>
                     <effect>
                        <ColorAdjust brightness="0.6" />
                     </effect>
                  </ImageView>
                  <Label fx:id="pendingLabel" text="number of pending requests" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
   </children>
</fx:root>
