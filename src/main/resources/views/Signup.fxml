<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" spacing="30.0" styleClass="user-input-layout" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azer.meetingmanager.ui.dialogs.SignupController">
   <children>
      <StackPane>
         <children>
            <Label styleClass="navbar-title" text="Sign up" />
         </children>
      </StackPane>
      <VBox>
         <children>
            <Label text="Your account name" />
            <TextField fx:id="accountNameTextField" />
            <Label fx:id="accountErrorLabel" style="-fx-font-size: 10;" text="Label" textFill="RED" visible="false" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Your email" />
            <TextField fx:id="emailTextField" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Your full name" />
            <TextField fx:id="userNameTextField" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Your password" />
            <PasswordField fx:id="passwordTextField" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Confirm password" />
            <PasswordField fx:id="confirmPasswordTextField" />
            <Label fx:id="errorLabel" style="-fx-font-size: 10;" text="Label" textFill="RED" visible="false" />
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancel" prefWidth="120.0" styleClass="text-button" text="Cancel" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#onRegister" prefWidth="120.0" text="Register" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
   </padding>
</VBox>
