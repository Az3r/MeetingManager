<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="80.0" styleClass="navbar" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azer.meetingmanager.ui.topbar.TopbarController">
   <left>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="30.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" styleClass="icon-button">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/back-arrow.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Text fx:id="titleText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="navbar-title" text="Home" />
         </children>
         <BorderPane.margin>
            <Insets right="30.0" />
         </BorderPane.margin>
      </HBox>
   </left>
   <right>
      <HBox alignment="CENTER_RIGHT" spacing="30.0" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="icon-button">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/home.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="loginButton" mnemonicParsing="false" text="Login" />
            <Button fx:id="signUpButton" mnemonicParsing="false" text="Sign up" />
            <MenuButton fx:id="accountButton" mnemonicParsing="false" styleClass="menu-button-account">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
            </MenuButton>
         </children>
         <BorderPane.margin>
            <Insets left="30.0" />
         </BorderPane.margin>
      </HBox>
   </right>
   <center>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <TextField fx:id="searchView" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" alignment="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="icon-button" HBox.hgrow="NEVER">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/search.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
      </HBox>
   </center>
   <padding>
      <Insets left="30.0" right="30.0" />
   </padding>
</BorderPane>
