<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azer.meetingmanager.ui.admin.PendingRequestController">
   <children>
      <BorderPane>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <right>
            <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onDenyAll" styleClass="text-button" text="Deny all" />
                  <Button mnemonicParsing="false" onAction="#onAcceptAll" text="Accept all" />
               </children>
            </HBox>
         </right>
         <left>
            <HBox alignment="CENTER" styleClass="meeting-item-detail" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="currentLabel" text="0" />
                  <Label text="/" />
                  <Label fx:id="CapacityLabel" text="150" />
               </children>
            </HBox>
         </left>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </BorderPane>
      <ScrollPane fx:id="pendingContainer" fitToWidth="true" />
   </children>
</VBox>
