<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.azer.meetingmanager.data.models.Location" table="location">
        <meta attribute="class-description">
            the location's detail of a meeting
        </meta>

        <id name="locationId" column="location_id" type="integer">
            <generator class="native"></generator>
        </id>

        <property name="name" column="name" type="string" not-null="true" length="50"></property>
        <property name="address" column="address" type="string" not-null="true" length="50"></property>
        <property name="capacity" column="capacity" type="integer"></property>
    </class>
</hibernate-mapping>