<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.azer.meetingmanager.data.models.User" table="user">
        <meta attribute="class-description">
            user's account used to login to application
        </meta>

        <id name="userId" column="user_id" type="integer">
            <generator class="native"></generator>
        </id>

        <property name="name" column="name" type="string"></property>
        <property name="email" column="email" type="string"/>
        <property name="salt" column="salt" type="string"/>
        <property name="password" column="password" type="string"/>
        <property name="isAdmin" column="is_admin" type="boolean"/>

    </class>
</hibernate-mapping>